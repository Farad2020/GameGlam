@model IEnumerable<GameGlamer.Models.GameDeal>

@{
    Layout = "_Layout";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>
    <div class="container">

        <div class="pb-2">
            <h3 class="m-0 text-black my_main_header text-center">Saved Game Deals</h3>
            <hr />
        </div>

        <div>
            <ul class="list-group">
                @foreach (GameDeal gameDeal in Model)
                {
                    <li class="list-group-item my_list_item mb-2" tabindex="0">
                        <div class="row">
                            <div class="col-3">
                                <img class="my_search_list_image d-block w-100" src="@gameDeal.thumbnail" alt="...">
                            </div>
                            <div class="col m-0 justify-content-start">
                                <div class="text-left">
                                    <span class="item_primary_text">@gameDeal.title</span>
                                    <br />
                                    <span class="item_secondary_text">@gameDeal.platforms</span>
                                </div>
                            </div>
                        </div>
                        <a asp-controller="GameDeals" asp-action="Details" asp-route-id="@gameDeal.id" class="stretched-link"></a>
                    </li>
                }
            </ul>
        </div>
    </div>
</body>
</html>
