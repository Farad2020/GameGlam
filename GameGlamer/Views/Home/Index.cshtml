@{
    ViewData["Title"] = "Home Page";
}

@model HomeMainVM

<div class="text-center" style="min-height: 200vh">
    <h1 class="display-4">Welcome To <span class="text-courgette">GameGlam</span>!</h1>
    <p>Here you can observe game and loot giveaways, just like these observing the sea.</p>

    <div class="my_image_banner">
        <img class="banner_image" src="~/media/gifs/main_banner.gif" />
    </div>


    <div class="pb-2">
        <h3 class="m-0 text-black my_main_header">Popular</h3>
        <hr />
    </div>

    <div class="container">
        <div class="row">
            <!-- click="redirect(item.id)"  v-for="item in content" :key="item.id"-->
            @foreach (GameDeal gameDeal in Model.topGames)
            {
                <div class="col-3 pb-3">
                    <div class="card w-100">
                        <img class="card-img-top" src="@gameDeal.thumbnail" alt="Card image cap">
                        <div class="card-body">
                            <h5 class="card-title text-center">@gameDeal.title</h5>
                        </div>
                        <a asp-controller="GameDeals" asp-action="Details" asp-route-id="@gameDeal.id" class="stretched-link"></a>
                    </div>
                </div>
            }

        </div>
    </div>

    <div class="py-2">
        <h3 class="m-0 text-black my_main_header">Top Items</h3>
        <hr />
    </div>
    <div class="container">
        <nav class="nav justify-content-center">
            <div class="nav nav-tabs" id="nav-tab" role="tablist">
                <button class="nav-link active" id="nav-games-tab" data-bs-toggle="tab" data-bs-target="#nav-games" type="button" role="tab" aria-controls="nav-games" aria-selected="true">Games</button>
                <button class="nav-link" id="nav-loot-tab" data-bs-toggle="tab" data-bs-target="#nav-loot" type="button" role="tab" aria-controls="nav-loot" aria-selected="false">Loot</button>
            </div>
        </nav>
        <div class="tab-content" id="nav-tabContent">
            <div class="tab-pane fade show active" id="nav-games" role="tabpanel" aria-labelledby="nav-home-tab">
                <ul class="list-group">
                    @foreach (GameDeal gameDeal in Model.top16Games)
                    {
                        <li class="list-group-item my_list_item mb-2" tabindex="0">
                            <div class="row">
                                <div class="col-3">
                                    <img class="my_search_list_image d-block w-100" src="@gameDeal.thumbnail" alt="...">
                                </div>
                                <div class="col m-0 justify-content-start">
                                    <div class="text-left">
                                        <span class="item_primary_text">@gameDeal.title</span>
                                        <br />
                                        <span class="item_secondary_text">@gameDeal.platforms</span>
                                    </div>
                                </div>
                            </div>
                            <a asp-controller="GameDeals" asp-action="Details" asp-route-id="@gameDeal.id" class="stretched-link"></a>
                        </li>
                    }
                </ul>
            </div>
            <div class="tab-pane fade" id="nav-loot" role="tabpanel" aria-labelledby="nav-profile-tab">
                <ul class="list-group">
                    @foreach (DLCorLootDeal lootDeal in Model.top16Loot)
                    {
                    <li class="list-group-item my_list_item mb-2" tabindex="0">
                        <div class="row">
                            <div class="col-3">
                                <img class="my_search_list_image d-block w-100" src="@lootDeal.thumbnail" alt="...">
                            </div>
                            <div class="col m-0 justify-content-start">
                                <div class="text-left">
                                    <span class="item_primary_text">@lootDeal.title</span>
                                    <br />
                                    <span class="item_secondary_text">@lootDeal.platforms</span>
                                </div>
                            </div>
                        </div>
                        <a asp-controller="DLCorLootDeals" asp-action="Details" asp-route-id="@lootDeal.id" class="stretched-link"></a>
                    </li>
                    }
                </ul>
            </div>
        </div>
    </div>



</div>

